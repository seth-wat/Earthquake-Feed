<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowExitTransition">@transition/fade</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ActionBarStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="HeaderDetail">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Caption</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="ValueDetail">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Large</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="SettingTitleText">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>


</resources>
