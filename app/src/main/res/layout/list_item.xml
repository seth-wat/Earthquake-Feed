<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="8dp">

    <FrameLayout
        android:layout_width="@dimen/mag_drawable_hw"
        android:layout_height="@dimen/mag_drawable_hw"
        android:layout_marginBottom="@dimen/mag_drawable_margin"
        android:layout_marginStart="@dimen/mag_drawable_margin"
        android:layout_marginTop="@dimen/mag_drawable_margin">

        <ImageView
            android:id="@+id/mag_representation"
            android:layout_width="@dimen/mag_drawable_hw"
            android:layout_height="@dimen/mag_drawable_hw"
            android:layout_gravity="center"
            android:contentDescription="@null"
            android:src="@drawable/mag_oval" />

        <TextView
            android:id="@+id/mag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@android:color/white"
            android:textSize="@dimen/mag_text_size"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/master_margin_start"
        android:orientation="vertical"
        android:paddingTop="@dimen/master_margin_tb"
        android:paddingBottom="@dimen/master_margin_tb">

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            tools:text="103km W of Fort Yukon, Alaska" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/place_distance"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/place_end_margin"
                android:layout_height="wrap_content"
                android:textColor="@color/darker_gray"
                android:textAppearance="@android:style/TextAppearance.Material.SearchResult.Subtitle"
                tools:text="103km W of Fort Yukon, Alaska" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@android:style/TextAppearance.Material.Small"
                tools:text="Thu Dec 14 2017 19:19:32 UTC -540" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_gravity="bottom"
        android:background="#F5F5F5" />
</FrameLayout>