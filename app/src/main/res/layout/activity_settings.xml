<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/preference_holder"
    tools:context="wat.seth.dev.capstoneproject.SettingsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        app:subtitle="@string/tb_settings"
        style="@style/ActionBarStyle"
        app:titleTextColor="@color/white"
        app:popupTheme="@style/AppTheme"
        app:subtitleTextColor="@color/lightGrey" />
    <fragment
        android:id="@+id/settings_fragment"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="wat.seth.dev.capstoneproject.fragments.SettingsFragment"
        />
</FrameLayout>
