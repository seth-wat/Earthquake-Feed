<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryLight">

        <android.support.v7.widget.CardView
            android:id="@+id/notification_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintRight_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:text="Notification Settings"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!--Notification toggle-->
                <TextView
                    android:id="@+id/notif_title_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/notif_toggle_switch"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notif_toggle_switch" />

                <TextView
                    android:id="@+id/notif_title_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:text="@string/notif_toggle_summary"
                    android:theme="@style/SettingValueContainer"
                    app:layout_constraintLeft_toLeftOf="@id/notif_title_toggle"
                    app:layout_constraintTop_toBottomOf="@id/notif_title_toggle" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/notif_toggle_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/button_top_margin"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notification_title" />
                <!--end notification toggle-->
                <FrameLayout
                    android:id="@+id/first_split"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@color/darkerGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notif_title_summary" />
                <!--start notification location-->

                <TextView
                    android:id="@+id/notif_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notif_location_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/notif_location_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notif_location_button" />

                <TextView
                    android:id="@+id/notif_location_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:text="@string/notif_location_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/notif_location_title"
                    app:layout_constraintTop_toBottomOf="@id/notif_location_title" />

                <TextView
                    android:id="@+id/notif_location_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/notif_location_button"
                    app:layout_constraintLeft_toRightOf="@id/divider"
                    app:layout_constraintTop_toBottomOf="@id/notif_location_button"
                    tools:text="112 31st Ave ..." />

                <ImageView
                    android:id="@+id/notif_location_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:src="@drawable/ic_location_on_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/first_split" />
                <!--end notification location-->
                <FrameLayout
                    android:id="@+id/second_split"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@color/darkerGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notif_location_summary" />
                <!--start notification range-->
                <TextView
                    android:id="@+id/notif_range_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notif_range_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/notif_range_down_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notif_range_down_button" />

                <TextView
                    android:id="@+id/notif_range_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:text="@string/notif_range_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/notif_range_title"
                    app:layout_constraintTop_toBottomOf="@id/notif_range_down_button" />

                <TextView
                    android:id="@+id/notif_range_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/notif_range_down_button"
                    app:layout_constraintLeft_toRightOf="@id/divider"
                    app:layout_constraintTop_toBottomOf="@id/notif_range_down_button"
                    tools:text="1.2" />

                <TextView
                    android:id="@+id/notif_range_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/range_suffix_imperial"
                    app:layout_constraintBottom_toBottomOf="@id/notif_range_value"
                    app:layout_constraintLeft_toRightOf="@id/notif_range_value" />

                <Button
                    android:id="@+id/notif_range_down_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@drawable/ic_remove_circle_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/second_split" />

                <Button
                    android:id="@+id/notif_range_up_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    app:layout_constraintRight_toLeftOf="@id/notif_range_down_button"
                    app:layout_constraintTop_toTopOf="@id/notif_range_down_button" />
                <!--end notification range-->
                <FrameLayout
                    android:id="@+id/third_split"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@color/darkerGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notif_range_summary" />
                <!--start notification magnitude-->
                <TextView
                    android:id="@+id/notif_mag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notif_min_mag_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/notif_mag_down_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notif_mag_down_button" />

                <TextView
                    android:id="@+id/notif_mag_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:paddingBottom="@dimen/spacer_margin"
                    android:text="@string/notif_min_mag_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/notif_mag_title"
                    app:layout_constraintTop_toBottomOf="@id/notif_mag_down_button" />

                <TextView
                    android:id="@+id/notif_mag_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/notif_mag_down_button"
                    app:layout_constraintLeft_toRightOf="@id/divider"
                    app:layout_constraintTop_toBottomOf="@id/notif_mag_down_button"
                    tools:text="1.2" />

                <TextView
                    android:id="@+id/notif_mag_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mag_suffix"
                    app:layout_constraintBottom_toBottomOf="@id/notif_mag_value"
                    app:layout_constraintLeft_toRightOf="@id/notif_mag_value" />

                <Button
                    android:id="@+id/notif_mag_down_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@drawable/ic_remove_circle_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/third_split" />

                <Button
                    android:id="@+id/notif_mag_up_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    app:layout_constraintRight_toLeftOf="@id/notif_mag_down_button"
                    app:layout_constraintTop_toTopOf="@id/notif_mag_down_button" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/search_cotainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notification_container">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/search_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintRight_toLeftOf="parent" />

                <TextView
                    android:id="@+id/search_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="8dp"
                    android:text="Search Settings"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!-- start search min mag-->
                <TextView
                    android:id="@+id/search_min_mag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_min_mag_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/search_min_mag_down_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_min_mag_down_button" />

                <TextView
                    android:id="@+id/search_min_mag_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:paddingBottom="@dimen/spacer_margin"
                    android:text="@string/search_min_mag_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/search_min_mag_title"
                    app:layout_constraintTop_toBottomOf="@id/search_min_mag_down_button" />

                <TextView
                    android:id="@+id/search_min_mag_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/search_min_mag_down_button"
                    app:layout_constraintLeft_toRightOf="@id/search_divider"
                    app:layout_constraintTop_toBottomOf="@id/search_min_mag_down_button"
                    tools:text="1.2" />

                <TextView
                    android:id="@+id/search_min_mag_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mag_suffix"
                    app:layout_constraintBottom_toBottomOf="@id/search_min_mag_value"
                    app:layout_constraintLeft_toRightOf="@id/search_min_mag_value" />

                <Button
                    android:id="@+id/search_min_mag_down_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@drawable/ic_remove_circle_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_title" />

                <Button
                    android:id="@+id/search_min_mag_up_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    app:layout_constraintRight_toLeftOf="@id/search_min_mag_down_button"
                    app:layout_constraintTop_toTopOf="@id/search_min_mag_down_button" />
                <!--end search min mag-->
                <FrameLayout
                    android:id="@+id/first_split_search"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@color/darkerGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_min_mag_summary" />
                <!--start notification magnitude-->
                <TextView
                    android:id="@+id/search_max_mag_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_max_mag_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/search_max_mag_down_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_max_mag_down_button" />

                <TextView
                    android:id="@+id/search_max_mag_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:paddingBottom="@dimen/spacer_margin"
                    android:text="@string/search_max_mag_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/search_max_mag_title"
                    app:layout_constraintTop_toBottomOf="@id/search_max_mag_down_button" />

                <TextView
                    android:id="@+id/search_max_mag_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/search_max_mag_down_button"
                    app:layout_constraintLeft_toRightOf="@id/search_divider"
                    app:layout_constraintTop_toBottomOf="@id/search_max_mag_down_button"
                    tools:text="1.2" />

                <TextView
                    android:id="@+id/search_max_mag_suffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mag_suffix"
                    app:layout_constraintBottom_toBottomOf="@id/search_max_mag_value"
                    app:layout_constraintLeft_toRightOf="@id/search_max_mag_value" />

                <Button
                    android:id="@+id/search_max_mag_down_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@drawable/ic_remove_circle_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/first_split_search" />

                <Button
                    android:id="@+id/search_max_mag_up_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:background="@drawable/ic_add_circle_black_24dp"
                    app:layout_constraintRight_toLeftOf="@id/search_max_mag_down_button"
                    app:layout_constraintTop_toTopOf="@id/search_max_mag_down_button" />
                <!--end max mag-->
                <FrameLayout
                    android:id="@+id/second_split_search"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@color/darkerGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_max_mag_summary" />
                <!--start search start date-->
                <TextView
                    android:id="@+id/search_start_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_start_date_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/search_start_date_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_start_date_button" />

                <TextView
                    android:id="@+id/search_start_date_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:text="@string/search_start_date_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/search_start_date_title"
                    app:layout_constraintTop_toBottomOf="@id/search_start_date_title" />

                <TextView
                    android:id="@+id/search_start_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/search_start_date_button"
                    app:layout_constraintLeft_toRightOf="@id/search_divider"
                    app:layout_constraintTop_toBottomOf="@id/search_start_date_button"
                    tools:text="112 31st Ave ..." />

                <Button
                    android:id="@+id/search_start_date_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@drawable/ic_today_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/second_split_search" />
                <!--search start date end-->
                <FrameLayout
                    android:id="@+id/third_split_search"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@color/darkerGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_start_date_summary" />
                <!--start search end date-->
                <TextView
                    android:id="@+id/search_end_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_end_date_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/search_end_date_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_end_date_button" />

                <TextView
                    android:id="@+id/search_end_date_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:text="@string/search_end_date_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/search_end_date_title"
                    app:layout_constraintTop_toBottomOf="@id/search_end_date_title" />

                <TextView
                    android:id="@+id/search_end_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/search_end_date_button"
                    app:layout_constraintLeft_toRightOf="@id/search_divider"
                    app:layout_constraintTop_toBottomOf="@id/search_end_date_button"
                    tools:text="112 31st Ave ..." />

                <Button
                    android:id="@+id/search_end_date_button"
                    android:layout_width="@dimen/location_button_wh"
                    android:layout_height="@dimen/location_button_wh"
                    android:layout_marginEnd="@dimen/button_end_margin"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@drawable/ic_today_black_24dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/third_split_search" />
                <!--search end date end-->
                <FrameLayout
                    android:id="@+id/fourth_split_search"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/spacer_margin"
                    android:background="@color/darkerGrey"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_end_date_summary" />
                <!--start search max results-->
                <TextView
                    android:id="@+id/search_max_results_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_max_results_title"
                    android:theme="@style/SettingTitleText"
                    app:layout_constraintBottom_toTopOf="@id/search_max_results_down_button"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/search_max_results_down_button" />

                <TextView
                    android:id="@+id/search_max_results_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/summary_margin_end"
                    android:layout_marginStart="@dimen/summary_margin_start"
                    android:paddingBottom="@dimen/spacer_margin"
                    android:text="@string/search_max_results_summary"
                    android:textSize="@dimen/summary_text_size"
                    app:layout_constraintLeft_toLeftOf="@id/search_max_results_title"
                    app:layout_constraintTop_toBottomOf="@id/search_max_results_down_button" />

                <TextView
                    android:id="@+id/search_max_results_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minEms="2"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/search_max_results_down_button"
                    app:layout_constraintLeft_toRightOf="@id/search_divider"
                    app:layout_constraintTop_toBottomOf="@id/search_max_results_down_button"
                    tools:text="1.2" />

                <Button
